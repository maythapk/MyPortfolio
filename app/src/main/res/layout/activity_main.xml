<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <TextView android:text="@string/nano_degree_text" android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textSize="10pt"/>

    <Button
        android:id="@+id/btn_spotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="220dp"
        android:height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:background="#F08C35"
        android:text="SPOTIFY STREAMER" />

    <Button
        android:id="@+id/btn_scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="220dp"
        android:height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:background="#F08C35"
        android:text="SCORES APP" />

    <Button
        android:id="@+id/btn_library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="220dp"
        android:height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:background="#F08C35"
        android:text="LIBRARY APP" />

    <Button
        android:id="@+id/btn_buidit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:width="220dp"
        android:height="60dp"
        android:background="#F08C35"
        android:text="BUILD IT BIGGER" />

    <Button
        android:id="@+id/btn_xyz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="220dp"
        android:height="60dp"
        android:background="#F08C35"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="XYZ READER" />

    <Button
        android:id="@+id/btn_capstone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:width="220dp"
        android:height="60dp"
        android:background="@android:color/holo_blue_bright"
        android:text="CAPSTONE: MY OWN APP" />

</LinearLayout>
